<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.miguel.agendaTelefonica">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.miguel.agendaTelefonica.autenticacao.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.miguel.agendaTelefonica.contato.view.ContatosActivity" />
        <activity android:name="br.com.miguel.agendaTelefonica.contato.view.DetalhesActivity" />
        <activity android:name="br.com.miguel.agendaTelefonica.contato.view.AddContatoActivity" />
        <activity android:name="br.com.miguel.agendaTelefonica.contato.view.EditarContatoActivity"></activity>
    </application>

</manifest>